{
  "name": "honeycomb-grid",
  "version": "3.1.7",
  "description": "Create hexagon grids easily",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "jsnext:main": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && rollup --config",
    "clean": "rm -rf dist && mkdir dist",
    "dev": "npm run clean && rollup --config --watch",
    "lint": "eslint \"{,!(dist)/**/}*.{js,ts}\" --fix",
    "playground": "parcel playground/index.html --out-dir playground/dist --cache-dir playground/.cache",
    "prerelease": "npm run lint && npm test && npm run docs && NODE_ENV=production npm run build",
    "release": "git add --patch && standard-version --commit-all",
    "start": "npm run build && node --require dist/index.js",
    "test": "jest",
    "test:watch": "npm test -- --watch"
  },
  "author": "Abbe Keultjes <flauwekeul@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/node": "12.12.37",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-jest": "24.1.3",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "parcel-bundler": "1.12.4",
    "precise-commits": "1.0.2",
    "prettier": "2.2.1",
    "rollup": "2.35.1",
    "rollup-plugin-typescript2": "0.29.0",
    "standard-version": "9.0.0",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flauwekeul/honeycomb.git"
  },
  "keywords": [
    "es2015",
    "grid",
    "hex",
    "hex-grid",
    "hexagon",
    "node"
  ],
  "bugs": {
    "url": "https://github.com/flauwekeul/honeycomb/issues"
  },
  "homepage": "http://abbekeultjes.nl/honeycomb",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits && npm run lint -- --ignore-pattern playground",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
