{
  "name": "honeycomb-grid",
  "version": "4.0.0-alpha.4",
  "description": "Create hexagon grids easily",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "jsnext:main": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && rollup --config",
    "clean": "rm -rf dist && mkdir dist",
    "dev": "npm run clean && rollup --config --watch",
    "lint": "eslint \"{,!(dist)/**/}*.{js,ts}\" --fix",
    "playground": "parcel playground/index.html --out-dir playground/dist --cache-dir playground/.cache",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prerelease": "npm run lint && npm test && NODE_ENV=production npm run build",
    "release": "git add --patch && standard-version --commit-all",
    "start": "npm run build && node --require dist/index.js",
    "test:watch": "npm test -- --watch",
    "test": "jest"
  },
  "author": "Abbe Keultjes <flauwekeul@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/node": "~14.14.31",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-jest": "24.3.5",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "parcel-bundler": "1.12.5",
    "pinst": "2.1.6",
    "precise-commits": "1.0.2",
    "prettier": "2.2.1",
    "rollup": "2.45.2",
    "rollup-plugin-typescript2": "0.30.0",
    "standard-version": "9.2.0",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flauwekeul/honeycomb.git"
  },
  "keywords": [
    "es2015",
    "grid",
    "hex",
    "hex-grid",
    "hexagon",
    "node"
  ],
  "bugs": {
    "url": "https://github.com/flauwekeul/honeycomb/issues"
  },
  "homepage": "http://abbekeultjes.nl/honeycomb",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
